server {
 listen 80 ;
 listen [::]:80 ;
 server_name nginx_web;
 return 301 https://$server_name$request_uri;
}
server {
    listen 443 ssl default_server;
    listen [::]:443 default_server ssl;
    server_name nginx_web ;
    charset utf8mb4;

    location /static {
        autoindex on;
        alias /var/www/html/nginx_web/static;


    }
    location / {
        proxy_pass http://0.0.0.0:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Configure file root, proxy_pass or whatever you use here

    ssl_certificate /etc/ssl/shuni_certs/ssl_web.crt;
    ssl_certificate_key /etc/ssl/shuni_certs/ssl_web.key;

    ssl     on;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
    ssl_session_cache   shared:SSL:10m;
    ssl_session_timeout 10m;
    keepalive_timeout   70;

}



